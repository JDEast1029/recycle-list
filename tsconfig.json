{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "allowJs": true,
    "types": [
      "@types/node",
      "@types/vue",
      "@types/lodash.debounce",
      "@types/lodash.pick"
    ],
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "examples/**/*"
  ]
}
